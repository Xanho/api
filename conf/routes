# System Routes
GET           /                                        controllers.Application.index

# User Routes
POST          /users/login                             controllers.User.login
POST          /users                                   controllers.User.create
GET           /users/:id                               controllers.User.read(id: String)
PUT           /users/:id                               controllers.User.update(id: String)
DELETE        /users/:id                               controllers.User.delete(id: String)

# Project Routes
POST          /projects                                controllers.research.Project.create
